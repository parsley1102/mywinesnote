<!DOCTYPE html>
<html lang="ja">
    <head>
        <!-- Required meta tags -->
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

        <!-- Bootstrap CSS -->
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css">

        <title>Stocks</title>
    </head>
    
<body>
  
  
  <p id="notice"><%= notice %></p>

<h1>Stocks</h1>
<p>買ったワインの一覧</p>
<br>
<%= link_to 'New Stock', new_stock_path, class: "btn btn-primary" %>
<br>
<br>
<table class="table">
  <thead>
    <tr>
      <th>Wine name</th>
      <th>Producer</th>
      <th>Country</th>
      <th>Region</th>
      <th>General notes</th>
      <th>Vintage</th>
      <th>Price</th>
      <th>Amount</th>
      <th>Bought from</th>
      <th>Bought on</th>
      <th>Cellar</th>
      <th>Stock notes</th>
      <th>Status</th>
      <th colspan="13"></th>
    </tr>
  </thead>

  <tbody>
    <% @stocks.each do |stock| %>
      <tr>
        <td><%= stock.wine_name %></td>
        <td><%= stock.producer %></td>
        <td><%= stock.country %></td>
        <td><%= stock.region %></td>
        <td><%= stock.general_notes %></td>
        <td><%= stock.vintage %></td>
        <td><%= stock.price %></td>
        <td><%= stock.amount %></td>
        <td><%= stock.bought_from %></td>
        <td><%= stock.bought_on %></td>
        <td><%= stock.cellar_id %></td>
        <td><%= stock.stock_notes %></td>
        <td><%= stock.status %></td>
        <td><%= link_to 'Show', stock %></td>
        <td><%= link_to 'Edit', edit_stock_path(stock) %></td>
        <td><%= link_to 'Nonda', nonda_stock_path(stock) %></td>
        <td><%= link_to 'Delete', stock, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
  <div>
    <%= paginate @stocks %>
  </div>

<!-- Optional JavaScript -->
        <!-- jQuery first, then Popper.js, then Bootstrap JS, then Font Awesome -->
        <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.6/umd/popper.min.js"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/js/bootstrap.min.js"></script>
        <script defer src="https://use.fontawesome.com/releases/v5.7.2/js/all.js"></script>

</body>
</html>